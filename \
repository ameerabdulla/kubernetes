   replicas: 2
   selector:
    matchLabels:
     name: deployment
   template:
     metadata:
       name: podtest
       labels:
         name: deployment
     spec:
      containers:
        - name: cont1
          image: httpd
          command: ["/bin/bash", "-c", "while true; do echo Ducat; sleep 5; done"]
          ports:
          - containerPort:80
